<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         bootstrap="../examples/autoload.php"
         strict="true"
         verbose="true">
  <testsuite name="Door">
    <directory suffix="Test.php">../examples/statemachines/Door/test</directory>
  </testsuite>

  <logging>
    <log type="coverage-html" target="coverage" title="Door" highlight="true"/>
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="false">
      <directory suffix=".php">../examples/statemachines/Door</directory>
      <exclude>
        <file>../examples/autoload.php</file>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
